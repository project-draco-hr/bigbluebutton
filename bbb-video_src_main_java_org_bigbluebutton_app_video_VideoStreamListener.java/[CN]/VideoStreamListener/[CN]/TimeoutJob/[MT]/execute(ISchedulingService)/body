{
  if ((System.currentTimeMillis() - lastVideoTime) > videoTimeout) {
    log.warn("No data received for stream[{}] in the last few seconds. Close stream.",stream.getPublishedName());
    if (!streamStopped) {
      streamStopped=true;
      scheduler.removeScheduledJob(timeoutJobName);
      stream.stop();
    }
  }
}
