{
  String result=object.getType();
  if (object.getPath().charAt(0) != '/') {
    result+='/';
  }
  result+=object.getPath();
  if (!result.endsWith("/")) {
    result+='/';
  }
  String name=object.getName();
  if (name == null) {
    name=PERSISTENCE_NO_NAME;
  }
  if (name.charAt(0) == '/') {
    name=name.substring(1);
  }
  return result + name;
}
