{
  while (pinging) {
    try {
      Thread.sleep(interval);
    }
 catch (    InterruptedException e) {
      log.info("Interrupted Exception on sending Ping:");
    }
    if (!pinging) {
      break;
    }
    if (connection.getState() != ManagerConnectionState.CONNECTED) {
      continue;
    }
    ping();
  }
}
