{
  super(in);
  mark(LIMIT);
  int total=0;
  int read;
  while ((read=read(excerpt,total,LIMIT - total)) != -1 && ((total+=read) < LIMIT))   ;
  if (total == LIMIT) {
    System.arraycopy(ELLIPSIS,0,excerpt,total,ELLIPSIS.length);
  }
 else {
    byte[] tmp=new byte[total];
    System.arraycopy(excerpt,0,tmp,0,total);
    excerpt=tmp;
  }
  reset();
}
