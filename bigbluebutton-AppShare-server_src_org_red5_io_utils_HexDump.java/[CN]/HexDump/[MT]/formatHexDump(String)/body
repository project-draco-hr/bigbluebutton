{
  int chunk=60;
  StringBuffer out=new StringBuffer();
  int from=0;
  int to=0;
  int size=in.length();
  while (from < size) {
    if (size < from + chunk) {
      to=size;
    }
 else {
      to=from + chunk;
    }
    out.append(in.substring(from,to));
    out.append("\n");
    from=to;
  }
  return out.toString();
}
