{
  log.info("Ready to receive messages from Redis pubsub.");
  try {
    receiveMessage=true;
    final Jedis jedis=redisPool.getResource();
    Runnable messageReceiver=new Runnable(){
      public void run(){
        if (receiveMessage) {
          jedis.psubscribe(new PubSubListener(),MessagingConstants.TO_BBB_APPS_PATTERN,MessagingConstants.FROM_BBB_APPS_PATTERN);
        }
      }
    }
;
    msgReceiverExec.execute(messageReceiver);
  }
 catch (  Exception e) {
    log.error("Error subscribing to channels: " + e.getMessage());
  }
}
