{
  startPublishing(scope);
  setupStreams();
  sendCapturedScreen=true;
  log.debug("Starting stream {}",outStreamName);
  capturedScreenSender=new Runnable(){
    public void run(){
      while (sendCapturedScreen) {
        sendCapturedScreen();
      }
    }
  }
;
  exec.execute(capturedScreenSender);
}
