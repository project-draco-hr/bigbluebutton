{
  processBlocks=true;
  while (processBlocks) {
    Message message;
    try {
      message=retriever.getNextMessageToSend();
      processNextMessageToSend(message);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
catch (    IOException e) {
      e.printStackTrace();
      processBlocks=false;
      notifyNetworkStreamListener(ExitCode.CONNECTION_TO_DESKSHARE_SERVER_DROPPED);
    }
  }
  try {
    outstream.close();
    outstream=null;
    socket.close();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
