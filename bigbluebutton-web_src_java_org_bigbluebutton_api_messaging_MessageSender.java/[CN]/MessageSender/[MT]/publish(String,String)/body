{
  Runnable task=new Runnable(){
    public void run(){
      Jedis jedis=redisPool.getResource();
      try {
        jedis.publish(channel,message);
      }
 catch (      Exception e) {
        log.warn("Cannot publish the message to pubsub",e);
      }
 finally {
        if (jedis != null) {
          jedis.close();
        }
      }
    }
  }
;
  runExec.execute(task);
}
