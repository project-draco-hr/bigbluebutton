{
  final Point mouse=e.getLocationOnScreen();
  if (isBorder) {
    if (isNearBottomRightCorner(mouse)) {
      e.getComponent().setCursor(Cursor.getPredefinedCursor(Cursor.SE_RESIZE_CURSOR));
    }
 else {
      e.getComponent().setCursor(Cursor.getDefaultCursor());
    }
  }
 else {
    e.getComponent().setCursor(Cursor.getPredefinedCursor(Cursor.SE_RESIZE_CURSOR));
  }
}
