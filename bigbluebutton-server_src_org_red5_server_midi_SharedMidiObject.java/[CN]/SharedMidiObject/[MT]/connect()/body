{
  try {
    dev=getMidiDevice(deviceName);
    if (dev == null) {
      log.error("Midi device not found: " + deviceName);
      return false;
    }
    if (!dev.isOpen()) {
      dev.open();
    }
    dev.getTransmitter().setReceiver(new MidiReceiver());
    return true;
  }
 catch (  MidiUnavailableException e) {
    log.error("Error connecting to midi device",e);
  }
  return false;
}
