{
  if (ping != null) {
    log.info("Stopping Keep Alive Ping");
    ping.stop();
  }
  if ((connection != null) && (connection.getState() == ManagerConnectionState.CONNECTED)) {
    log.info("Logging off fom [" + connection.getHostname() + ":"+ connection.getPort()+ "]");
    connection.logoff();
  }
  appDelegate.shutdown();
}
