{
  printLog("stopMedia","Halting sip audio...");
  if (sender != null) {
    sender.halt();
    sender=null;
    printLog("stopMedia","Sender halted.");
  }
  if (receiver != null) {
    receiver.halt();
    receiver=null;
    printLog("stopMedia","Receiver halted.");
  }
  try {
    Thread.sleep(RTPStreamReceiver.SO_TIMEOUT);
  }
 catch (  Exception e) {
  }
  socket.close();
  return true;
}
